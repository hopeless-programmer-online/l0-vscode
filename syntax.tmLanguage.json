{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "l0",
    "scopeName": "source.l0",
    "patterns": [
        { "include": "#keyword" },
        { "include": "#line_comment" },
        { "include": "#number" }
    ],
    "repository": {
        "line_comment": {
            "name": "comment.line",
            "match": ";.*(?:\\n|$)"
        },
        "keyword": {
            "name": "keyword.control",
            "match": "\\b(super)\\b"
        },
        "number": {
            "name": "constant.numeric",
            "match": "-?\\s*\\d(?:\\d|\\s)*(?:\\.\\s*\\d(?:\\d|\\s)*)?"
        }
    }
}
